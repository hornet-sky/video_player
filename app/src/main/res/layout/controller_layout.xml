<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controllerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:visibility="invisible">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/playerStatusImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_play" />

        <SeekBar
            android:id="@+id/playerProgressSeekBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:progressDrawable="@drawable/player_progress_seek_bar_style" />

        <TextView
            android:id="@+id/playRemainingTimeTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            tools:text="16:56" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>